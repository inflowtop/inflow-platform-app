{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "camelcase": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          [
            "/^react/",
            "/^react-native/"
          ],
          [
            "/^@expo/",
            "/^expo/"
          ],
          [
            "/^@src/",
            "/^@screens/",
            "/^@components/",
            "/^@contexts/",
            "/^@hooks/",
            "/^@assets/",
            "/^@@types/"
          ],
          "/^nativewind/",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}